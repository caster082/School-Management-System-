<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="student_data_pdf_template_report">
        <t t-call="web.basic_layout">
            <div class="page" style="font-family:'Myanmar3';">
                <!-- <t t-call="web.external_layout"></t> -->
                <t t-foreach="docs" t-as="student">
                    <div class="col-md-6">
                        <table>
                            <tr>
                                <td>
                                    <h1>Student Information</h1>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <img t-att-src="'data:image/*;base64,%s' % to_text(student.image)" class="avatar" alt="Avatar"/>
                                </td>
                            </tr>

                            <tr>
                                <td>Name</td>
                                <td>
                                    <t t-esc="student.student_name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Age</td>
                                <td>
                                    <t t-esc="student.age"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Phone</td>
                                <td>
                                    <t t-esc="student.mobile"/>
                                </td>
                            </tr>
                            <tr>
                                <td>Email</td>
                                <td>
                                    <t t-esc="student.email"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                <!-- </t> -->
                </t>
            </div>
        </t>
    </template>

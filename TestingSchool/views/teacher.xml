<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!--tree view of the doctor model-->
    <record id="teacher_tree" model="ir.ui.view">
        <field name="name">sch.teacher.tree</field>
        <field name="model">sch.teacher</field>
        <field name="arch" type="xml">
            <tree string="Teacher">
                <field name="name"/>
                <field name="gender"/>
                <field name="subject"/>
                <field name="salary"/>
            </tree>
        </field>
     </record>

    <!--form view of the doctor model-->
    <record id="teacher_form" model="ir.ui.view">
        <field name="name">sch.teacher.form</field>
        <field name="model">sch.teacher</field>
        <field name="arch" type="xml">
            <form string="Teachers">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="gender"/>
                            <field name="subject"/>
                            <field name="user_id"/>
                            <field name="salary"/>
                        </group>
                        <group>
                            <field name="related_student_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
     </record>

    <!--action of the doctor menu-->
    <record id="action_teacher" model="ir.actions.act_window">
        <field name="name">Teacher</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sch.teacher</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="context">{}</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create your First Teacher Records !
          </p>
        </field>
    </record>

            <!-- Bar chart Line chart -->
        <record id="teacher_graph" model="ir.ui.view">
            <field name="name">sch.teacher.graph</field>
            <field name="model">sch.teacher</field>
            <field name="arch" type="xml">
                <graph string="Teacher Graph">
                    <field name="name"/>
                    <field name="salary" type="measure"/>
                </graph>
            </field>
        </record>

    <!--menu for the doctor-->
    <menuitem id="school_teacher" name="Teacher Records" parent="School_root" action="action_teacher" sequence="2"/>

</odoo>
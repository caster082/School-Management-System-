    <record id="act_student_graph" model="ir.actions.act_window">
        <field name="name">Student Records</field>
        <field name="res_model">sch.record</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="TestingSchool.student_graph_pie"/>
    </record>

    <record id="act_teacher_list" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">sch.teacher</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="TestingSchool.teacher_graph"/>

    </record>

    <record id="act_student_list" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">sch.record</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="dashboard_form_view" model="ir.ui.view">
        <field name="name">Dashboard Form</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <board style="1-2">
                    <column>
                        <action
                            string="Student Graph"
                            name="%(act_student_graph)d"/>

                        <action
                            string="Teacher Records"
                            name="%(act_teacher_list)d"/>

                    </column>
                    <column>
                        <action
                            string="Student Records"
                            name="%(act_student_list)d"/>
                    </column>
                </board>
            </form>
        </field>
    </record>

    <record id="mit_dashboard" model="ir.actions.act_window">
        <field name="name">MIT Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="dashboard_form_view"/>
    </record>

    <menuitem
        name="School Dashboard"
        parent="account.menu_finance"
        action="mit_dashboard"
        sequence="1"
        id="menu_dashboard"/>

</odoo>
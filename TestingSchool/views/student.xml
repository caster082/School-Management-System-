<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="student_action" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sch.record</field>
            <field name="view_mode">tree,kanban,form,pivot,graph,calendar,activity</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Student
                </p>
            </field>
        </record>

<!--    Data Form-->
        <record id="student_data_form" model="ir.ui.view">
            <field name="name">student.student.data.form</field>
            <field name="model">sch.record</field>
            <field name="arch" type="xml">
                <form string="Leads">
                    <header>

                        <field name="state" widget="statusbar" options="{'clickable': '1'}"  statusbar_visible="draft,confirm, done, cancel"/> <!--Creating Status Bar  options="{'clickable': '1', 'fold_field': 'fold'} is for Clickable-->
                        <button name="action_confirm" id="action_confirm" string="Confirm" class="btn-primary" type="object" states="draft,cancel"/>
                        <button name="action_done" id="action_done" string="Mark as Done" class="btn-primary" type="object"  states="draft"/>
                        <button name="action_cancel" id="action_cancel" string="canceled" class="btn-primary" type="object" states="draft"/>
                        <button name="action_draft" id="action_draft" string="Draft" class="btn-primary" type="object" states="confirm, done, cancel"/>
                        <button name="report_excel" string="Excel Print" class="oe_highlight" type="object" states="confirm,done"/>
                    </header>
                    <sheet>
                        <div class="oe-button_box" name="button_box" position="inside">
                            <button class="oe_start_button" type="object" name="toggle_active" icon="fa-archive" style="background-color:LightGray; color:mediumpurple">
                                <field name="active" string ="Active" widget="boolean_button" options="{'terminology':'archived'}"/>
                            </button>
                            <button name="action_open_book" class="oe_stat_button" type="object" icon="fa-book" modifiers="{}" options="{}"><!--Smart Buttton-->
                                <field name="book_count" class="o_stat_value"  style="background-coor:LightGray; color:mediumpurple"/>
                                <span class="o_stat_text"> Books</span>
                            </button>
                        </div>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                            Student Information <field name="student_name" />
                            </h1>
                        </div>

                        <notebook>
                            <page string="Student Information">
                                <group>
                                    <group>
                                        <field name="student_name" />
                                        <field name="birth_date" />
                                        <field name="age" />
                                        <field name="gender" />
                                        <field name="book_count" />
                                        <field name="amount" />


                                    </group>
                                    <group>
                                        <field name="notes" />
                                        <field name="email" />
                                        <field name="mobile" />
                                        <field name="responsible_id" />
                                        <button name="action_confirm" id="action_confirm" string="Confirm" class="btn-primary" type="object"/>

                                    </group>
                                </group>
                            </page>
                            <page string="Student Technical Info">
                                    <group>
                                        <field name="id" />
                                        <field name="create_date" />
                                        <field name="create_uid" />
                                    </group>
                            </page>
                            <page string="Books" >
                                <field name="state" invisible="1" />
                                <field name="books" attrs = "{'readonly':[('state','=', 'done')]}">
                                    <tree editable="bottom">
                                        <field name="book_name" />
                                        <field name="Subject" />
                                        <field name="Category" />
                                        <field name="product_id" />
                                        <field name="Qty" />
                                        <field name="student_id" />

                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="book_name" />
                                                <field name="Subject" />
                                                <field name="Category" />
                                                <field name="product_id" />

                                            </group>
                                            <group>
                                                <field name="student_id" />
                                                <field name="Qty" />
                                            </group>
                                        </group>
                                    </form>
                                </field>
                            </page>

                        </notebook>

                        <div class="oe_chatter" modifiers="{}">
                            <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                            <field name="activity_ids" widget="mail_activity" modifiers="{}"/>
                            <field name="message_ids" widget="mail_thread" modifiers="{}" options="{'display_log_button': True}"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

<!--    For Search Groupby Filter -->
        <record id="student_search" model="ir.ui.view">
            <field name="name">student.student.search</field>
            <field name="model">sch.record</field>
            <field name="arch" type="xml">
                <search string="Search Patients">
<!--                    <field name="name" filter_domain="['|',('student_name', 'ilike', self), ('name_seq', 'ilike', self)]"/>-->
<!--                    <field name="name_seq"/>-->
<!--                    <field name="student_name" filter_domain="['|',('student_name', 'ilike', self), ('name_seq', 'ilike', self)]"/>-->
<!--                    <field name="student_name" filter_domain="['|', '|', ('display_name', 'ilike', self), ('ref', '=', self), ('email', 'ilike', self)]"/>-->
                    <field name="email" filter_domain="[('email', 'ilike', self)]"/>
                    <field name="mobile" filter_domain="['|', ('mobile', 'ilike', self), ('mobile', 'ilike', self)]"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <separator />
                    <filter string="Male" name="male" domain="[('gender', '=', 'male')]"/>
                    <filter string="Female" name="female" domain="[('gender', '=', 'fe_male')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
                    </group>
<!--                    <searchpanel>-->
<!--                        <field name="state" string="Status" select="multi" enable_counters="1"/>-->
<!--                        <field name="gender" string="gender"/>-->
<!--                    </searchpanel>-->

                    <searchpanel>
                        <field name="state" string="Status" icon="fa-building" select="multi"/>
                        <field name="gender" string="gender" icon="fa-users"/>
                    </searchpanel>
                </search>
            </field>
        </record>

<!--    For Tree View-->
        <record id="student_data_tree_view" model="ir.ui.view">
            <field name="name">student.student.data.tree</field>
            <field name="model">sch.record</field>
            <field name="arch" type="xml">
                <tree string="Students">
                    <field name="id" optional="show"/>
                    <field name="student_name" optional="show"/>
                    <field name="birth_date" optional="show"/>
                    <field name="age" optional="hide"/>
                    <field name="gender" optional="show"/>
                    <field name="notes" optional="show"/>
                    <field name="email" optional="show"/>
                    <field name="mobile" optional="show"/>
                    <field name="create_date" optional="show"/>
                    <field name="create_uid" optional="show"/>
                    <field name="state" optional="show"/>
                    <field name="responsible_id" optional="show"/>
                    <field name="book_count" optional="show"/>
                    <field name="activity_ids" widget="list_activity" on_change="1" modifiers="{}"/>

                </tree>
            </field>
        </record>

 
        <record id="student_data_kanban_view" model="ir.ui.view">
                    <field name="name">student.student.data.kanban</field>
                    <field name="model">sch.record</field>
                    <field name="arch" type="xml">
                        <kanban>
                            <field name="id"/>
                            <field name="student_name"/>
                            <field name="email"/>
                            <field name="mobile"/>
                            <field name="image"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div t-attf-class="oe_kanban_global_click">
                                        <div class="o_kanban_image">
                                            <!-- <img alt="Avatar" t-att-src="kanban_image('sch.record', 'image_medium',record.id.raw_value)"/> -->

                                            <t t-if="record.image.raw_value">
                                                <img alt="Avatar" t-att-src="kanban_image('sch.record', 'image_medium',record.id.raw_value)"/>
                                            </t>
                                            <t t-else="">
                                                <img class="o_kanban_image" alt="Avatar" t-att-src='_s+"/TestingSchool/static/description/usericon.jpg"' />
                                            </t>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <strong class="o_kanban_record_title">
                                            <field name="student_name"/>
                                            </strong>
                                        <div t-if="record.mobile.value">
                                                <t t-esc="record.mobile.value"/>
                                        </div>
                                            <div t-if="record.email.value">
                                                <t t-esc="record.email.value"/>
                                        </div>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                </record>


<!--    For Activity View-->
        <record id="student_data_activity_view" model="ir.ui.view">
            <field name="name">student.student.data.activity</field>
            <field name="model">sch.record</field>
            <field name="arch" type="xml">
                <activity string="Students Activity">
                    <field name="id"/>
                    <field name="student_name"/>
                    <templates>
                        <div t-name="activity-box">
                            <img t-att-src="activity_image('sch.record', 'image', record.id.raw_value)" t-att-title="record.id.value" t-att-alt="record.id.value"/>
                            <div>
                                <field name="student_name" display="full"/>
                            </div>
                        </div>
                    </templates>
                </activity>
            </field>
        </record>


            <!-- Pivot chart -->
        <record id="student_pivot" model="ir.ui.view">
            <field name="name">sch.record.pivot</field>
            <field name="model">sch.record</field>
            <field name="arch" type="xml">
                <pivot string="Students Records Pivot ">
                    <field name="student_name" type="row"/>
                    <field name="gender" type="col" interval="day"/>
                </pivot>
            </field>
        </record>

            <!-- Calendar View -->
        <record id="student_calendar" model="ir.ui.view">
        <field name="name">sch.record.calendar</field>
        <field name="model">sch.record</field>
        <field name="arch" type="xml">
            <calendar string="Student Calendar" date_start="birth_date" color="student_name" mode="month" quick_add="True">
                <field name="student_name"/>
                <field name="gender"/>
            </calendar>
        </field>
    </record>

            <!-- Pie chart -->
        <record id="student_graph_pie" model="ir.ui.view">
            <field name="name">sch.record.graph</field>
            <field name="model">sch.record</field>
            <field name="arch" type="xml">
                <graph string="Student Graph" type="pie">
                    <field name="student_name"/>
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>
            <!-- Bar chart Line chart -->
        <record id="student_graph" model="ir.ui.view">
            <field name="name">sch.record.graph</field>
            <field name="model">sch.record</field>
            <field name="arch" type="xml">
                <graph string="Student Graph">
                    <field name="student_name"/>
                    <field name="amount" type="measure"/>
                </graph>
            </field>
        </record>

      

        <!-- Top menu item -->
        <menuitem id="School_root"
            name="MIT School"
            sequence="10"/>

        <menuitem id="school_student_root"
            name="Student Records"
            parent="School_root"
            sequence="2"/>


        <menuitem id="school_student"
            name="Student"
            parent="school_student_root"
            action="student_action"
            sequence="2"/>

</odoo>

